<Page
    x:Class="SimulationPlatform.Pages.DeployPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimulationPlatform.Pages">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Margin="20,0,0,0">
			<TextBlock Text="Deploy Page"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="32"/>
			<TextBlock Text="Configure and deploy a vehicle for the track."
					   FontSize="14"
					   Foreground="DarkGray"/>
		</StackPanel>
        <!-- Grid to configure the car -->
        <StackPanel Height="400">
            <Grid>
                <Image Source="/Assets/carBackground.png"
                       Margin="0,50,0,0"
                       Stretch="Fill"
                       Opacity="0.6"
                       Height="400"
                       Width="800"/>
                <StackPanel 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                    <ComboBox Width="150" PlaceholderText="Tyre Type" Margin="780,280,0,0">
                        <ComboBoxItem Content="Tyre Type" />
                        <ComboBoxItem Content="Slicks" />
                        <ComboBoxItem Content="B" />
                    </ComboBox>

                </StackPanel>
            </Grid>
        </StackPanel>

		<StackPanel Grid.Row="1" Margin="20,50,0,0">
			<Button Content="Deploy" Click="DeployButton_Click"/>
            <TextBlock Text="Deploying..." FontSize="14" 
                       Foreground="Orange" 
                       Visibility="{x:Bind DeployingVisibility, Mode=OneWay}"/>
            <TextBlock Text="Connected!" FontSize="14" Foreground="Green" 
                       Visibility="{x:Bind ConnectedVisibility, Mode=OneWay}"/>
            <TextBlock Text="Deployment failed" FontSize="14" Foreground="IndianRed"  
                       Visibility="{x:Bind DeployErrorVisibility, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</Page>

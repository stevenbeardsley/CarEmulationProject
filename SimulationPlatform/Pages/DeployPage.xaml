<Page
    x:Class="SimulationPlatform.Pages.DeployPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimulationPlatform.Pages">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Margin="10,0,0,0">
			<TextBlock Text="Deploy Page"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="32"/>
			<TextBlock Text="Configure and deploy a vehicle for the track."
					   FontSize="14"
					   Foreground="DarkGray"/>
		</StackPanel>

		<StackPanel Grid.Row="1" Margin="10,0,0,0">
			<Button Content="Deploy" Click="DeployButton_Click"/>
		</StackPanel>
        <StackPanel Spacing="10">
            <TextBlock Text="WebSocket Status Monitor" FontSize="20" FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Connection:" Width="100"/>
                <TextBlock x:Name="ConnectionStatus" Text="Disconnected" Foreground="Red"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Status:" Width="100"/>
                <TextBlock x:Name="StatusText" Text="-" FontWeight="SemiBold"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="PID:" Width="100"/>
                <TextBlock x:Name="PidText" Text="-" FontWeight="SemiBold"/>
            </StackPanel>

            <Button Content="Connect"
                    Width="100"
                    Click="ConnectButton_Click"
                    Margin="0,20,0,0"/>

            <ScrollViewer Height="100">
                <TextBlock x:Name="LogOutput" TextWrapping="Wrap"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>
